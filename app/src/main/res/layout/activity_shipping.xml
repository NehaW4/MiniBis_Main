<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shipping"
    android:orientation="vertical">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/baloo"
        android:text="Shipping "
        android:layout_gravity="center"

        android:textSize="40dp" />

    <ImageView
        android:id="@+id/intsavg"
        android:layout_width="205dp"
        android:layout_height="229dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/smallbiz" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
         android:fontFamily="@font/baloo"
        android:text="\t\t\tYour Product Would Be Shipped And Delivered To Your Location In Few Days.\n\n\n\t\t\t\t\t\t\t\t For Any Query Do Contact Us."
        android:textSize="20dp" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:onClick="gotomship"
        android:text="Go To Home"
        android:textColor="#136dec"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>